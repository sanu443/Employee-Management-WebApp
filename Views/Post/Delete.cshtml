@model Post

@section PageStyles {
    <link rel="stylesheet" href="~/css/Tabel.css" />
}

@{
    ViewData["Title"] = "Șterge Post";
}

<h2 class="titlu-departamente">@ViewData["Title"]</h2>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" name="Id" value="@Model.Id" />

    <table class="tabel-departamente">
        <thead>
            <tr>
                <th>Nume</th>
                <th>Descriere</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.NumePost</td>
                <td>@Model.DescrierePost</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-grup-formular">
        <button type="submit" class="btn btn-danger btn-formular">Șterge</button>
        <a href="/Post" class="btn btn-secondary btn-formular">Renunță</a>
    </div>
</form>
